<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text = "일자"
        android:textSize = "25dp"
        />

    <TextView
        android:id="@+id/dp_date"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/date"
        android:layout_alignBottom="@+id/date"
        android:layout_alignLeft="@+id/et_category"
        android:layout_marginRight="10dp"
        android:gravity="center"

        android:textColor = "#000000"

        android:background = "@drawable/editdesign"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below = "@+id/date"
        android:text = "시간"
        android:textSize = "25dp"
        />

    <TextView
        android:id="@+id/tp_time"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/time"
        android:layout_alignBottom="@+id/time"
        android:layout_alignLeft="@+id/et_category"
        android:layout_marginRight="10dp"
        android:gravity="center"

        android:textColor = "#000000"

        android:background = "@drawable/editdesign"
        />

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text = "금액"
        android:textSize = "25dp"
        />

    <EditText
        android:id="@+id/et_sum"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/sum"
        android:layout_alignBottom="@+id/sum"
        android:layout_alignLeft="@+id/et_category"
        android:layout_marginRight="10dp"
        android:gravity="center"

        android:inputType="number"

        android:background = "@drawable/editdesign"
        />

    <TextView
        android:id="@+id/breakdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sum"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text = "내역"
        android:textSize = "25dp"
        />

    <EditText
        android:id="@+id/et_breakdown"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/breakdown"
        android:layout_alignBottom="@+id/breakdown"
        android:layout_alignLeft="@+id/et_category"
        android:layout_marginRight="10dp"
        android:gravity="center"

        android:background = "@drawable/editdesign"
        />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breakdown"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text = "카테고리"
        android:textSize = "25dp"
        />

    <TextView
        android:id="@+id/et_category"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/category"
        android:layout_alignBottom="@+id/category"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor = "#000000"
        android:gravity="center"

        android:background = "@drawable/editdesign"
        />

    <TextView
        android:id="@+id/method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text = "구분"
        android:textSize = "25dp"
        />

    <TextView
        android:id="@+id/et_method"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/method"
        android:layout_alignBottom="@+id/method"
        android:layout_alignLeft = "@+id/et_category"
        android:layout_marginRight="10dp"
        android:textColor = "#000000"
        android:gravity="center"

        android:background = "@drawable/editdesign"
        />

    <Button
        android:id="@+id/CANCEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/method"
        android:layout_toLeftOf="@+id/OK"
        android:layout_marginTop="50dp"
        android:text="취소"
        android:textSize="20dp"
        android:onClick = "onClick_CANCEL"
        />

    <Button
        android:id="@+id/OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/method"
        android:layout_alignRight="@+id/et_category"
        android:layout_marginTop="50dp"
        android:text="확인"
        android:textSize="20dp"
        android:onClick = "onClick_OK"
        />
</RelativeLayout>
