<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/list_dt"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginRight = "5dp"
        android:textColor = "#000000"
        android:textSize = "12dp"
        />

    <TextView
        android:id = "@+id/list_category"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginRight = "5dp"
        android:layout_toRightOf="@+id/list_dt"

        android:textColor = "#000000"
        android:textSize = "12dp"
        />

    <TextView
        android:id = "@+id/list_breakdown"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginRight = "5dp"
        android:layout_toRightOf="@+id/list_category"
        android:textColor = "#000000"
        android:textSize = "12dp"
        />

    <TextView
        android:id = "@+id/list_money"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/list_breakdown"
        android:textColor = "#000000"
        android:textSize = "12dp"
        />

    <TextView
        android:id = "@+id/list_method"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/list_money"
        android:textColor = "#000000"
        android:textSize = "12dp"
        />

</RelativeLayout>